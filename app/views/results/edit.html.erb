<h1>回答画面</h1>

<%= image_tag @question.image if @question.image.attached? %>

<%= form_with scope: :question, url: result_path(params[:id]), method: :patch do |f| %>
  <%= f.hidden_field :number, value: session[:question_num] %>
  <ul>
  <% @answers.each do |answer| %>
    <li>
      <label>
        <%= f.radio_button :select, answer[:is_correct] %>
        <%= answer[:text] %>
      </label>
    </li>
  <% end %>
  </ul>
  <%= f.submit "送信" %>
<% end %>