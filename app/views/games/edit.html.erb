<h1>回答画面</h1>
<h2>問題<%= session[:question_num] %></h2>

<% if @question.image.attached? %>
  <%= image_tag @question.image.variant(:display) %>
<% end %>

<%= form_with scope: :question, url: game_path(params[:id]), method: :patch do |f| %>
  <ul>
  <% @answers.each do |answer| %>
    <li>
      <label>
        <%= f.radio_button :answer, answer[:is_correct] %>
        <%= answer[:text] %>
      </label>
    </li>
  <% end %>
  </ul>
  <%= f.submit "送信" %>
<% end %>