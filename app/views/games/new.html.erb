<div class="row">
  <%= form_with(model: @game, class: "col s12 m6 l4 offset-m3 offset-l4") do |f| %>
    <%= f.label :ニックネーム %>
    <%= f.text_field :name %>
    <div class="center-align">
      <%= f.submit "ゲームを開始する", class: "waves-effect waves-light btn-large" %>
    </div>
  <% end %>
</div>
<h2>Ranking</h2>
<table class="striped">
  <thead>
    <tr>
      <th>Nickname</th>
      <th>Rate</th>
      <th>Time</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
    <tr>
      <td><%= game.name %></td>
      <td><%= game.percentage_correct_answers %>%</td>
      <td><%= pluralize(game.answer_time,"second") %></td>
    </tr>
    <% end %> 
  </tbody>
</table>