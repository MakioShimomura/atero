<div class="row start-game">
  <%= form_with(model: @game, class: "col s12 m6 l4 offset-m3 offset-l4") do |f| %>
    <div class="mb-0">
      <%= f.label :ニックネーム %>
      <% if @game.name %>
         <%= f.text_field :name, placeholder: @game.name %>
      <% else %>
        <%= f.text_field :name %>
      <% end %>
    </div>
    <div class="center-align">
      <button type='submit' class="waves-effect waves-light btn-large full">ゲーム開始</button>
    </div>
  <% end %>
</div>
<h2>Ranking</h2>
<table class="striped">
  <thead>
    <tr>
      <th>順位</th>
      <th>ニックネーム</th>
      <th>正答率</th>
      <th>タイム</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
    <tr>
      <td>1</td>
      <td><%= game.name %></td>
      <td><%= game.percentage_correct_answers %>%</td>
      <td><%= pluralize(game.answer_time,"second") %></td>
    </tr>
    <% end %>
  </tbody>
</table>
